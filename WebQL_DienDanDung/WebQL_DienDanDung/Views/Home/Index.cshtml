@using WebQL_DienDanDung.Models;
@model List<tbl_Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-carousel" data-flickity='{ "cellAlign": "left", "contain": true ,"autoPlay": 1500 }' style="padding-top:10px">
    <div class="carousel-cell">
        <img src="~/Content/img_bg/QC1.png" style="width:100%; height:100%" />
    </div>
    <div class="carousel-cell">
        <img src="~/Content/img_bg/nen.jpg" style="width: 100%;height: 100%" />
    </div>
    <div class="carousel-cell">
        <img src="~/Content/img_bg/QC3.png" style="width:100%; height:100%" />
    </div>
    <div class="carousel-cell">
        <img src="~/Content/img_bg/QC4.png" style="width: 100%;height: 100%" />
    </div>
    <div class="carousel-cell">
        <img src="~/Content/img_bg/QC5.jpg" style="width:100%; height:100%" />
    </div>
</div>
<div class="container" style="padding-top:50px">
    <div class="row">
        <div class="col-md-2">
            <h5>Tìm Kiếm Theo Giá</h5>
            <form>
                <input type="checkbox" id="gia1" name="gia-1" value="Apple">
                <label for="gia1">Từ 10,000 - 200,000</label>
                <input type="checkbox" id="gia2" name="gia2-2" value="Banana">
                <label for="gia2">Từ 210,000 - 550,000 </label>
                <input type="checkbox" id="gia3" name="gia-3" value="Cherry">
                <label for="gia3">Từ 560,000 - 700,000</label>
                <input type="checkbox" id="gia4" name="gia-4" value="Strawberry">
                <label for="gia4">Từ 710,000 - 1,000,000</label>
                <input type="checkbox" id="gia5" name="gia-5" value="Strawberry">
                <label for="gia5">Trên 1,000,000</label>
            </form>
        </div>
        <div class="col-md-10">
            @if (Model != null)
            {
                foreach (tbl_Product sp in Model)
                {
                    <div class="col-md-4 col-sm-4 col-6" id="products" style="text-align:center; margin-bottom:10px;">
                        <div class="item-product">
                            <div class="anh">
                                <a href="@Url.Action("Details", "SanPham", new { id = sp.Id })"><img src="~/Content/img/@sp.ProductImage" style="max-height:200px" width="200px" /></a>
                            </div>
                            <div class="ten">
                                <h5><a class="text-name-product" href="@Url.Action("Details", "SanPham", new { id = sp.Id })">@sp.ProductName</a></h5>
                            </div>
                            <div class="gia">
                                <h5>Giá: @string.Format("{0:N0}", sp.Cost) VNĐ</h5>
                            </div>
                            <div class="review">
                                <i class="fa fa-star" style="color:#FFC120;"></i>
                                <i class="fa fa-star" style="color:#FFC120;"></i>
                                <i class="fa fa-star" style="color:#FFC120;"></i>
                                <i class="fa fa-star" style="color:#FFC120;"></i>
                                <i class="fa fa-star"></i>
                                <p>15 Reviews</p>
                            </div>
                            <div class="datmua" style="padding-top:5px">
                                <a href="@Url.Action("Index", "Home", new {@strURL=Request.Url.ToString()})" onclick="return alert('Đặt hàng thành công!.')">
                                        <button type="button" class="btn btn-info" >
                                            <i class="fab fa-opencart"> ĐẶT MUA</i>
                                        </button>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

