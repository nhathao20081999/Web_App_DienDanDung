@using WebQL_DienDanDung.Models;
@model List<tbl_User>
@{
    ViewBag.Title = "NhanVien";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<style type="text/css">
    #father {
        width: 400px;
        overflow: auto;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        text-align: center;
    }

    table, th, td {
        border: 1px solid #151313;
    }

    th, td {
        text-align: left;
        padding: 10px;
    }

    #myTable {
        border-collapse: collapse;
        width: 100%;
        border: 1px solid #ddd;
    }

        #myTable th, #myTable td {
            text-align: left;
            padding: 12px;
        }

        #myTable tr {
            border-bottom: 1px solid #ddd;
        }

            #myTable tr.header, #myTable tr:hover {
                background-color: #f1f1f1;
            }
</style>

<div>
    <a style="padding: 0 50% 0 2%;">
        <button type="button" class="fas fa-user-plus btn btn-dark" onclick="document.getElementById('themnv').style.display='block'"></button>
    </a>

    <div id="themnv" class="modal">
        <form class="modal-content animate" action="@Url.Action("ThemNV","NhanVien")" method="post">
            <div class="imgcontainer">
                <span onclick="document.getElementById('themnv').style.display = 'none'" class="close" title="Close Modal"><i class="fas fa-backspace"></i></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Họ Tên:</label>
                <div class="col-sm-8">
                    <input style="text-align:center" type="text" class="form-control" name="TenNV" placeholder="Nhập Họ Tên..." required>
                </div>
                <div style="color:black;">
                    @ViewData["Them1"]
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Ngày Sinh:</label>
                <div class="col-sm-8">
                    <input style="text-align:center" type="date" class="form-control" name="NgaySinhNV" required>
                </div>
                <div style="color:black;">
                    @ViewData["Them2"]
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Giới Tính:</label>
                <div class="col-sm-8" style="text-align:center">
                    <input style="text-align:center;padding-left:1%;" type="radio" name="GioiTinhNV" value="true" checked="checked" /><a style="padding-right:10%;"> Nam </a>
                    <input style="text-align:center;padding-left:1%;" type="radio" name="GioiTinhNV" value="false" /><a>Nữ</a>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Số Điện Thoại:</label>
                <div class="col-sm-8">
                    <input style="text-align:center" type="tel" class="form-control" id="mobile" name="SdtNV" placeholder="Nhập Số Điện Thoại..." required>
                </div>
                <div style="color:black;">
                    @ViewData["Them3"]
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Địa Chỉ:</label>
                <div class="col-sm-8">
                    <input style="text-align:center" type="text" class="form-control" name="DiaChiNV" placeholder="Nhập Địa Chỉ..." required>
                </div>
                <div style="color:black;">
                    @ViewData["Them4"]
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Tình Trạng:</label>
                <div class="col-sm-8" style="text-align:center">
                    <input style="text-align:center;padding-left:1%;"  type="radio" name="TinhTrang" value="True" checked="checked" /><a style="padding-right:10%;"> Hoạt Động </a>
                </div>
            </div>
            <div style="text-align:right;width:auto;font-size: 2.0em;padding: 0 12% 0 0">
                <button class="add" type="submit"><i class="fas fa-user-check"></i></button>
                <a href="@Url.Action("NhanVien", "NhanVien")"><i class="fas fa-share-square"></i></a>
            </div>
            <div class="form-group row">

            </div>
        </form>

    </div>
    <div class="box" style="text-align:center;font-size: 18px;">
        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Nhập từ cần tìm..." title="Type in a name">
        <a class="fas fa-search" style="color:white;width:60px;"></a>
    </div>

</div>
<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered">
            <tr class="header" style="background-color:black; color:white;">
                <th style="text-align: center;"> Họ Tên Nhân Viên</th>
                <th style="text-align: center;">Ngày Sinh</th>
                <th style="text-align: center;">Giới Tính</th>
                <th style="text-align: center;">Số Điện Thoại</th>
                <th style="text-align: center;">Địa Chỉ</th>
                <th style="text-align: center;">Tình Trạng</th>
                <th style="text-align: center; width: 1%;"></th>
                <th style="text-align: center; width: 1%;"></th>
            </tr>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center">@item.UserName</td>
                        <td style="text-align:center" id="ngay">@String.Format("{0:dd/MM/yyyy}", item.Birthday)</td>
                        @if (Convert.ToString(item.Gender) == "True")
                        {
                            <td style="text-align:center"> Nam</td>
                        }
                        else
                        {
                            <td style="text-align:center"> Nữ</td>
                        }
                        <td style="text-align:center">@item.PhoneNumber</td>
                        <td style="text-align:center">@item.Address</td>
                        @if (Convert.ToString(item.Status) == "True")
                        {
                            <td style="text-align:center"> Hoạt Động</td>
                        }
                        else
                        {
                            <td style="text-align:center"> Không Hoạt Động</td>
                        }
                        <td><a href="@Url.Action("SuaNV","NhanVien",new { id_nv = @item.Id})" class="fas fa-user-edit" style="font-size:25px"></a></td>
                        <td><a href="@Url.Action("XoaNV", "NhanVien", new { id_nv = @item.Id })" class="fas fa-user-times" style="font-size:25px"></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@*Tìm kiếm*@
<script>
    $(document).ready(function () {
        $('#myInput').on('keyup', function (event) {
            event.preventDefault();
            /* Act on the event */
            var tukhoa = $(this).val().toLowerCase();
            $('#myTable tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(tukhoa) > -1);
            });
        });
    });
