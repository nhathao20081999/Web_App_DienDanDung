<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/open-iconic/1.1.1/font/css/open-iconic-bootstrap.min.css" />
    <link href="~/Content/css/home.css" rel="stylesheet" />
    <link href="~/Content/css/item_sp.css" rel="stylesheet" />
    <link href="~/Content/css/slide.css" rel="stylesheet" />
    <link href="~/Content/css/timkiem_home.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
    <script src="@Url.Content("~/Scripts/jquery-3.5.1.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="https://kit.fontawesome.com/6b02239e17.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="padding-top:1%">
        <div class="header-top">
            <div class="container-fluid">
                <div class="row">
                    <div class="navbar-header">
                        <i style="color:#fff;font-size:18px;padding-left:35px" class=""></i>
                        <a style="color:#fff;">@Html.ActionLink("H&T", "Index", "Home")</a>
                        <i style="color:#fff;font-size:18px;padding-left:35px" class="fa fa-home"></i>
                        <a style="color:#fff;">@Html.ActionLink("HOME", "Index", "Home")</a>
                        <i style="color:#fff;font-size:18px;padding-left:35px" class="fas fa-charging-station"></i>
                        <a style="color:#fff;">@Html.ActionLink("PRODUCT", "AllSanPham", "SanPham")</a>
                    </div>
                    <div style="padding-left:70%">
                        <ul class="navbar-nav">
                            @using (Html.BeginForm("TimKiem", "TimKiem", FormMethod.Get, new { @class = "form-search form-inline" }))
                            {
                                <input class="form-control" type="search" id="inputSearch" name="id" placeholder="Tìm kiếm tên sản phẩm" aria-label="search" onkeyup="fnSearch(this)" style="width:500px" />

                                <button type="submit" aria-label="Tìm Kiếm" class="btn btn-primary" title="Tìm kiếm" style="width:45px;height:35px;text-align:center;background-color:#11decb;border:1px solid black;">
                                    <i class="fas fa-search"></i>
                                </button>
                            }
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        <marquee direction="right"> @DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year - Điện Dân Dụng H&T rất hân hạnh được đón tiếp quý khách! </marquee>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("upload", required: false)
